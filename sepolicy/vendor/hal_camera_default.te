# For interfacing with PowerHAL
hal_client_domain(hal_camera_default, hal_power)
hal_client_domain(hal_camera_default, hal_configstore)

# Allow hal_camera_default to read directory of
# mnt_vendor_file/vendor_persist_camera_file/vendor_persist_sensors_file/vendor_sysfs_kgsl
allow hal_camera_default {
  mnt_vendor_file
  vendor_persist_camera_file
  vendor_persist_sensors_file
  vendor_sysfs_kgsl
}:dir r_dir_perms;

# Allow hal_camera_default to read file of
# mnt_vendor_file/vendor_persist_camera_file/vendor_persist_sensors_file/vendor_sysfs_kgsl
allow hal_camera_default {
  mnt_vendor_file
  vendor_persist_camera_file
  vendor_persist_sensors_file
  vendor_sysfs_kgsl
}:{ 
  file
  lnk_file
} r_file_perms;

# Allow hal_camera_default to read to proc_stat
allow hal_camera_default proc_stat:file read;

# Allow hal_camera_default to set and get camera properties
set_prop(hal_camera_default, vendor_camera_prop)
get_prop(hal_camera_default, vendor_camera_prop)

# Allow hal_camera_default to write to socket_device
allow hal_camera_default socket_device:sock_file write;

# Allow hal_camera_default to open to proc_stat
allow hal_camera_default proc_stat:file { open };

# Allow hal_camera_default to read to vendor_xdsp_device
allow hal_camera_default vendor_xdsp_device:chr_file r_file_perms;

# fastrpc_shell_3
allow hal_camera_default public_adsprpcd_file:file r_file_perms;

# Allow hal_camera_default to get system_server
binder_call(hal_camera_default, system_server)
